<p style="color: green"><%= notice %></p>

<%= @battle.player1.name %> vs <%= @battle.player2.name %> 
 
<div id="battle">
  <%= @battle.boards.last.attributes.to_s %>
</div>

<form>
  <label>Say something:</label><br>
  <input type="text" data-behavior="battle_speaker">
</form>

<%= render 'board', battle: @battle, board: @board, cards: @cards %>

<% content_for :styles do %>
  <style>
    .battle-board {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      background: #f5f5f5;
      border-radius: 8px;
    }

    .player1-area,
    .player2-area {
      padding: 20px;
      background: #fff;
      border-radius: 4px;
      margin: 10px 0;
    }

    .battle-members {
      display: flex;
      justify-content: space-around;
      margin: 20px 0;
    }

    .member-slot {
      width: 120px;
      height: 120px;
      border: 2px solid #ccc;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 4px;
      padding: 10px;
      text-align: center;
    }

    .member-slot.active {
      border-color: #4CAF50;
      background: #E8F5E9;
    }

    .empty-slot {
      color: #999;
    }

    .battle-info {
      text-align: center;
      padding: 20px;
      background: #E3F2FD;
      border-radius: 4px;
      margin: 10px 0;
    }

    .deck-info {
      text-align: left;
      margin: 20px;
    }

    .deck-cards {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin: 10px 0;
    }

    .card {
      padding: 10px;
      background: #eee;
      border-radius: 4px;
      font-size: 0.9em;
      border: 1px solid #ddd;
    }

    .sequence {
      font-size: 0.8em;
      color: #666;
      margin-top: 5px;
    }

    .member {
      text-align: center;
    }

    .end-turn-button {
      margin-top: 15px;
      padding: 10px 20px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 1em;
    }

    .end-turn-button:hover {
      background-color: #45a049;
    }    .card[data-behavior="playable_card"] {
      cursor: pointer;
      transition: transform 0.2s;
    }

    .card[data-behavior="playable_card"]:hover {
      transform: translateY(-5px);
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.5);
      z-index: 1000;
    }

    .modal-content {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
    }

    .position-buttons {
      display: flex;
      gap: 10px;
      margin-top: 15px;
      justify-content: center;
    }

    .position-button {
      padding: 10px 20px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .position-button:hover {
      background-color: #45a049;
    }

    .member-slot.available {
      background-color: #E8F5E9;
      border-color: #4CAF50;
      cursor: pointer;
    }
  </style>
<% end %>
